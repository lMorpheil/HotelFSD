mixin radio(id,text,name,checked)
    .radio
        if checked
            input(type="radio" id=`${id}` class="radio__input" name=`${name}` checked)
            label(class="radio__label" for=`${id}`)=text
        else
            input(type="radio" id=`${id}` class="radio__input" name=`${name}`)
            label(class="radio__label" for=`${id}`)=text
        