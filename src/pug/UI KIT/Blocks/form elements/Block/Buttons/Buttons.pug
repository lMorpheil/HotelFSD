mixin button(text, width, background, dark, arrow, form, id, link)
    if background
        if dark
            button(class="button__background_dark" class=`${arrow}` style=`width: ${width}` form=`${form}` id=`${id}` )= text
        else
            button(class="button__background_light" class=`${arrow}` style=`width: ${width}` form=`${form}` id=`${id}` )= text
    else
        if dark
            button(class=(link ? "button__link_colorful" : "button__text_dark") class=`${arrow}` style=`width: ${width}` form=`${form}` id=`${id}` )= text
        else
            button(class=(link ? "button__link_grey" : "button__text_light") class=`${arrow}` style=`width: ${width}` form=`${form}` id=`${id}` )= text