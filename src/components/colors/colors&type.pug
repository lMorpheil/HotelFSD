mixin colorsandtype()
    div(class="colors__wrapper")
        +logo("grey")
        div(class="colors__wrap")
            div(class="colors__color")
                ul.colors__list
                    li.colors__item
                    li.colors__item
                    li.colors__item
                    li.colors__item
                    li.colors__item
                    li.colors__item
                    li.colors__item
            div(class="colors__titles")
                ul.colors__list
                    li.colors__item 
                        p.collors__description This one is the sub-section or widget title
                    li.colors__item 
                        p.collors__description Next one is the item title inside widgets
                    li.colors__item 
                        p.collors__description This is a label or CTA text
                    li.colors__item 
                        p.collors__description This is the body text which is used for most of the design, like paragraphs, lists, etc.
