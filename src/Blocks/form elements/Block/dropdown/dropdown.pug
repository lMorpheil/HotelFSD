mixin dropdown(id, name, title, item1, item2, item3, switcher, width,open,clear,apple)
    div(class="dropdown")
        div(class="dropdown__wraplabel" style=`width: ${width}`)
            label(for=`${id}` class="dropdown__title")
                span.dropdown__span=`${name}`
                span.dropdown__span=`${title}`
        input(style=`width: ${width}` type="text"
                class=( switcher ? "dropdown__input_border dropdown__input" : "dropdown__input")
                class=(open ? "dropdown__input_border" : "")
                readonly id=`${id}` data-border data-style= switcher ? true : false )
        div(class=(open ? "dropdown__window dropdown__window_hidden" : "dropdown__window dropdown__input_border") data-window style=`width: ${width}`)
            div(class="dropdown__item")
                label(for="bedroom" class="dropdown__label")=(switcher ? "Спальни" : "Взрослые")
                div.dropdown__wpapper
                    button(type="button" class="dropdown__minus") -
                    input(type="text" class="dropdown__number" id=`${id}bedroom` value=`${item1}`)
                    button(type="button" class="dropdown__plus") +
            div(class="dropdown__item")
                label(for="bed" class="dropdown__label")=(switcher ? "Кровати" : "Дети")
                div.dropdown__wpapper
                    button(type="button" class="dropdown__minus") -
                    input(type="text" id=`${id}bed` class="dropdown__number"  value=`${item2}`)
                    button(type="button" class="dropdown__plus") +
            div(class="dropdown__item")
                label(for="bath" class="dropdown__label")=(switcher ? "Ванные комнаты" : "Младенцы")
                div.dropdown__wpapper
                    button(type="button" class="dropdown__minus") -
                    input(type="text" id=`${id}bath` class="dropdown__number" value=`${item3}`)
                    button(type="button" class="dropdown__plus") +
            div(class="dropdown__buttons")
                if (clear)
                    +button("очистить","","","dark","","","","link", "clear" )
                else
                    div.dropdown__wpapper
                if (apple)
                    +button("применить","","","dark","","","","link", "apply" )