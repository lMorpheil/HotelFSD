include ../Blocks/mixin.pug
doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title TOXIN
    body
        +header("", './login.html', "./registration.html")
        section(class="search-room")
            div(class="search-room__filter")
                div
                    +textfield("text", "date","ДД.ММ.ГГГГ","266px", "masked text field","", "date")
                div
                    +dropdown("dropDownFormguestthree","Гости","","3","","1","","","","clear","appl")
