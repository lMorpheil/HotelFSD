                div(class="search-room__checkbox")
                    div
                        span правила дома
                    div
                        +checkbox("vipe","Можно курить")
                    div
                        +checkbox("pet", "Можно с питомцами","checked")
                    div
                        +checkbox("guest", "Можно пригласить гостей (до 10 человек)","checked")
                div(class="search-room__description")
                    div
                        span Доступность
                    div
                        +richCheckbox("rich_1", "<p><span>Широкий коридор</span>Ширина коридоров в номере<br/> не менее 91 см.</p>", "rich_2", "<p><span>Помощник для инвалидов</span> На 1 этаже вас встретит специалист  и проводит до номера.</p>")
                div
                    +dropdown("dropDownForm", "Удобства номера", "", "2", "2", "", "true")
                div
                    +checkboxList("дополнительные удобства", 1,false, [{Завтрак : false},{"Письменный стол": true},{"Стул для кормления" : true},{Кроватка : true},{Телевизор : false},{Шампунь : false}])
